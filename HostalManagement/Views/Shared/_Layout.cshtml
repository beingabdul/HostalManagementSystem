    <title>@ViewBag.Title </title>

    <!-- General CSS Files -->
    <link rel="stylesheet" href="~/Content/admin/assets/modules/bootstrap/css/bootstrap.min.css">

    <!-- CSS Libraries -->
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
