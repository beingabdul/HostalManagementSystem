@model IEnumerable<HostalManagement.Models.Registration>

@{
    ViewBag.Title = "Clerk List";
}

<h2>Clerk List</h2>

<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CNIC)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            Actions
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CNIC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td class="alert-danger">
                | @Html.ActionLink("Edit Record", "ClerkEdit", new { id = item.RegistrationId }) |

                @Html.ActionLink("Details", "ClerkDetail", new { id = item.RegistrationId }) |

                @Html.ActionLink("Delete", "ClerkDelete", new { id = item.RegistrationId }) |
            </td>

        </tr>
    }

</table>
<div class="form-actions no-color">
    <input type="button" value="Register New User" class="btn btn-primary" id="btn-cre" />
</div>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>

<script>
        $(document).on('click', '#btn-cre', function () {
                        location.href = "/Admin/ClerkCreate";});
</script>
