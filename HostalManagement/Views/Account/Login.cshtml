
@{
    Layout = null;
}
    
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/Content/admin/assets/modules/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/admin/assets/modules/fontawesome/css/all.min.css">
    <!-- CSS Libraries -->
    <link rel="stylesheet" href="~/Content/admin/assets/modules/bootstrap-social/bootstrap-social.css">
    <!-- Template CSS -->
    <link rel="stylesheet" href="~/Content/admin/assets/css/style.min.css">
    <link rel="stylesheet" href="~/Content/admin/assets/css/components.min.css">

</head>
<body>

    <div id="app">
        <section class="section">
            <div class="container mt-5">
                <div class="row">
                    <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
                        <div class="login-brand">
                            <img src="~/Content/admin/logo/EasyLiveLogo.png" />
                        </div>
                        <div class="card card-primary">
                            <div class="card-body">

                                @using (Html.BeginForm("Login", "Account", new { @class = "needs-validation", @novalidate = "", @role = "form" }))
                                {
                                    <div class="form-group">
                                        <label for="email">Email</label>
                                        <input id="Email" type="email" class="form-control" name="Email" tabindex="1" required autofocus>
                                        <div class="invalid-feedback">
                                            Please fill in your email
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input id="Password" type="password" class="form-control" name="Password" tabindex="2" required>
                                        <div class="invalid-feedback">
                                            please fill in your password
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary btn-lg btn-block" tabindex="4">
                                            Login
                                        </button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>


    <script src="~/Scripts/jquery-3.3.1.js"></script>
    @if (TempData["msg"] != null)
    {
        <script type="text/javascript">

            window.onload = function () {
                alert("@TempData["msg"]");
            };
        </script>
    }

    <script src="~/Content/admin/assets/bundles/lib.vendor.bundle.js"></script>
    <script src="~/Content/admin/js/CodiePie.js"></script>
    <script src="~/Content/admin/js/scripts.js"></script>
    <script src="~/Content/admin/js/custom.js"></script>

</body>
</html>
