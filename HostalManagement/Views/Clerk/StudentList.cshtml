@model IEnumerable<HostalManagement.Models.Registration>

@{
    ViewBag.Title = "StudentList";
}

<h2>Students Registration</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FatherName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CNIC)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            Category
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FatherName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CNIC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Catagory1.Name)
            </td>
            <td class="alert-danger">
                | @Html.ActionLink("Edit Record", "StudentEdit", new { id = item.RegistrationId }) |

                @Html.ActionLink("Details", "StudentDetail", new { id = item.RegistrationId }) |

                @Html.ActionLink("Delete", "StudentDelete", new { id = item.RegistrationId }) |
            </td>
        </tr>
    }

</table>

<p style=" margin-left: 880px">
    <button class="btn btn-primary">@Html.ActionLink("Create", "StudentCreate")</button>
</p>

